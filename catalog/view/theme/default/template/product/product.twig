			$('.alert-dismissible, .text-danger').remove();

			if (json['success']) {
				$('#recurring-description').html(json['success']);
			}
		}
	});
});
var win_width = $(window).width();
$(window).resize(function() {
  win_width = $(window).width();
  show_slider();
});
$(document).ready(function() {
  show_slider();
});
function show_slider() {
  if(win_width <= 992) {
    $.when(
      $('[id^="section"]').show(),
      $('#slideshow-img').addClass('swiper-container'),
      $('#slideshow-group').addClass('swiper-wrapper'),
      $('[id^="section"]').addClass('swiper-slide')
    )
    .then(function() {
      $('#slideshow-img').swiper({
        mode: 'horizontal',
        slidesPerView: 1,
        pagination: '.slideshow-img',
        paginationClickable: true,
        nextButton: '.swiper-button-next',
          prevButton: '.swiper-button-prev',
          spaceBetween: 30,
        autoplay: 2500,
          autoplayDisableOnInteraction: true,
        loop: true
      });
    });
  }
  else
  {
    $('#slideshow-img').removeClass('swiper-container');
    $('#slideshow-group').removeClass('swiper-wrapper');
    $('[id^="section"]').removeClass('swiper-slide');
    $('[id^="section"]').hide();
    $('#section1').show();
  }
}
